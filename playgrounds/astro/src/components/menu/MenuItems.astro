---
// MenuItems.astro - Independent implementation
import type { MenuItemsProps } from '../../types/menu';

// Destructure props with defaults
const { 
  as = 'div',
  static: isStatic = false,
  ...rest 
} = Astro.props as MenuItemsProps;

// Generate unique ID for accessibility
const menuItemsId = `headlessui-menu-items-${Math.random().toString(36).substring(2, 9)}`;

// Set initial display style (hidden by default, shown when menu is open)
const style = isStatic ? {} : { display: 'none' };
---

<div
  id={menuItemsId}
  data-headlessui-menu-items
  data-headlessui-state=""
  role="menu"
  style={style}
  {...rest}
>
  <slot />
</div>