---
// DisclosureButton.astro - Independent implementation
import type { DisclosureButtonProps } from '../../types/disclosure';

// Destructure props with defaults
const { 
  as = 'button',
  id,
  ...rest 
} = Astro.props as DisclosureButtonProps;

// Generate ID if not provided
const buttonId = id || `headlessui-disclosure-button-${Math.random().toString(36).substring(2, 9)}`;

// Determine the element to render
const Element = as;

// Default attribute setup for button
const defaultAttrs = as === 'button' 
  ? { type: 'button' } 
  : {};
---

<Element
  id={buttonId}
  data-headlessui-disclosure-button
  aria-expanded="false"
  {...defaultAttrs}
  {...rest}
>
  <slot />
</Element>